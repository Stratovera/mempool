global:
  scrape_interval: 15s

scrape_configs:
  - job_name: "node"
    static_configs:
      - targets:
          - "localhost:${NODE_EXPORTER_PORT}"

  - job_name: "bitcoin"
    static_configs:
      - targets:
          - "bitcoin-exporter-${NETWORK}:9100"

  - job_name: "mariadb"
    static_configs:
      - targets:
          - "mariadb-exporter-${NETWORK}:9104"
